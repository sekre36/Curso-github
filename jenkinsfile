pipeline {
    agent any

    stages {
        stage('Informaci칩n de la ciudad') {
            steps {
                script {
                    // Informaci칩n de la ciudad
                      ciudad = 'Carrizosa'
                      habitantes = 1.225
                      climaActual = 'Soleado'

                    // Mostrar la informaci칩n
                    println "Ciudad actual: ${ciudad}"
                    println "Habitantes: ${habitantes}"
                    println "Clima actual: ${climaActual}"
                }
            }
        }

        stage('Ejecutar comando BAT') {
            steps {
                bat 'ipconfig /flushdns'
            }
        }

        stage('Informar usuario') {
            steps {
                script {
                    // Obtener el usuario que ejecuta la tarea
                      usuario = env.BUILD_USER

                    // Mostrar el usuario
                    println "El usuario que est치 ejecutando la tarea es: ${usuario}"
                }
            }
        }
    }
}
